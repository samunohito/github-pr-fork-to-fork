{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/esm",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/esm"
  },
  "include": [
    "src/**/*.ts"
  ]
}